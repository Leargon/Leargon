# Environment Configuration Example
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env file to version control!

# Database Configuration
DB_URL=jdbc:mysql://localhost:3306/leargon?createDatabaseIfNotExist=true&useSSL=false&allowPublicKeyRetrieval=true
DB_USERNAME=leargon
DB_PASSWORD=your_secure_database_password_here

# JWT Configuration
# REQUIRED: Generate a secure secret with at least 32 characters
# Example: openssl rand -base64 32
JWT_SECRET=your_secure_jwt_secret_at_least_32_characters_long

# Fallback Admin User Configuration (optional)
# If set, an admin user will be automatically created on application startup
# Only creates admin if no admin user exists with the specified email
# SECURITY: Use strong passwords and change after first login in production
ADMIN_EMAIL=admin@leargon.local
ADMIN_USERNAME=admin
ADMIN_PASSWORD=ChangeMe123!
ADMIN_FIRST_NAME=System
ADMIN_LAST_NAME=Administrator

# Server Configuration (optional)
# Defaults to 8082 if not set
# MICRONAUT_SERVER_PORT=8082
